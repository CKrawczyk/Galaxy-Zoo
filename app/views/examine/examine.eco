<div id="examine">
  <div class="content">
    <div class="content-block">
      <h1 class="heading">Examine</h1>
      
      <div class="left">
        <div class="subject">
          <% if @subject : %>
            <img src="<%= @subject.image() %>" class="name">
          <% end %>
        </div>
      </div>
      
      <div class="right">
        <% if @subject : %>
          <h2><%= @subject.zooniverse_id.toUpperCase() %></h3>
          <div class="subject-info">
            <%- require("views/examine/#{ @subject.metadata.survey }")(@) %>
          </div>
        <% end %>
        <button id="load-fits">Load FITS</button>
        <div id="viewer-controls"></div>
        <div id="histogram" style="width:300px;height:200px"></div>
      </div>
    </div>
  </div>
</div>
