<div class="question">
  <p class="heading"><%= @title %></p>
  <p class="text"><%= @text %></p>
  
  <div class="buttons">
    <% for row in _(@answers).inGroupsOf(4) : %>
      <div class="row">
        <% for [id, answer] in row : %>
          <div class="answer">
            <div class="icon">
              <div class="hover"><%= answer.text %></div>
              <a data-id="<%= id %>">
                <img src="<%= answer.icon %>" />
              </a>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
