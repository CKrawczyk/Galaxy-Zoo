$green = #C1EA00
$light-blue = #0079AE
$light-gray = #EEF3F5
$dark-gray = #01050F
$blue = #0079AE
$dark-blue = #003C57

icons()
  .icon.favorite
    background: url('images/icons.png') no-repeat -72px 0px
    
    &.active
      background: url('images/icons.png') no-repeat -72px -37px
  
  .icon.invert
    background: url('images/icons.png') no-repeat -108px 0px
    
    &.active
      background: url('images/icons.png') no-repeat -108px -37px
  
  .icon.sloan
    cursor: auto
    background: url('images/icons.png') no-repeat -36px 0px
    
    &.active
      cursor: auto
      background: url('images/icons.png') no-repeat -36px -37px
  
  .icon.candels
    cursor: auto
    background: url('images/icons.png') no-repeat 0px 0px
    
    &.active
      cursor: auto
      background: url('images/icons.png') no-repeat 0px -37px

clearfix()
  &:after
    content: ''
    display: block
    clear: both

standard-button()
  box-sizing(border-box)
  cursor: pointer
  background: #E8E8E8
  border: 1px solid rgba(#070E17, 0.33)
  border-radius: 0.33em
  box-shadow: 0 0.67em 0.67em rgba(#FCFCFC, 0.33) inset, 0 -0.5em 0.5em rgba(#070E17, 0.125) inset, 0 0.125ex 0.25ex rgba(#070E17, 0.33)
  display: inline-block
  font-family: "Open Sans"
  font-size: inherit
  line-height: 1
  margin-left: 0.75em
  padding: 0.5em 2em
  text-decoration: none
  text-shadow: 0 0.125ex #FCFCFC
  vertical-align: middle
  
  &:hover
    border-color: rgba(#002736, 0.5)
  
  &.default
    background: #0095CC
    text-shadow: 0 0.125ex rgba(#002736, 0.5)
    
    &:hover
      border-color: rgba(#002736, 0.75)
  
  &.toggle.selected, &:active
    box-shadow: 0 0.125ex 0.25ex rgba(#070E17, 0.5) inset
  
  &:disabled
    box-shadow: none
    opacity: 0.5
