#home
  .headline
    font-family: "Open Sans"
    font-weight: 700
    font-size: 36px
    color: #efefef
    width: 100%
    text-align: center
    margin-top: 60px
    padding: 0px
  
  .call-to-action
    font-family: "Open Sans"
    font-weight: 400
    font-size: 14px
    color: #efefef
    padding: 0px
    margin: 0px
    
    .button
      height: 20px
      width: 130px
      background: #c1ea00
      font-family: "Open Sans"
      font-weight: 800
      font-size: 10px
      padding: 3px 5px
      color: #000000
      text-transform: uppercase
      -webkit-border-radius: 2px
      border-radius: 2px
      text-decoration: none
  
  .slider
    display: block
    border-top: 1px solid $dark-blue
    border-bottom: 1px solid $dark-blue
    margin-top: 70px
    padding: $gutter-size 0px
    
    .slide-element
      min-height: 240px
      
      &.galaxy-zoo
        background: url("images/gz_slider1.jpg") #000 no-repeat
      
      .left
        width: $one-quarter
        padding-top: 25px
        
        .header-blue
          font-family: "Open Sans"
          font-weight: 800
          font-size: 12px
          color: #0079ae
          text-transform: uppercase
          padding: 0
          margin: 0
        
        .header-title
          font-family: "Open Sans Condensed"
          font-weight: 700
          font-size: 55px
          color: #efefef
          text-transform: uppercase
          padding: 0px
          margin: 0px
          margin-left: -4px
          line-height: 55px
        
        .description
          font-family: "Open Sans"
          font-weight: 400
          font-size: 11px
          line-height: 18px
          color: #efefef
          width: 300px
        
        .blue-button
          display: inline-block
          background-color: $green
          font-family: "Open Sans"
          font-weight: 800
          font-size: 12px
          line-height: 18px
          color: $dark-gray
          text-decoration: none
          margin-top: 5px
          padding: 4px 10px
          -webkit-border-radius: 3px
          border-radius: 3px
  
  .content-block
    clearfix()
    display: block
    width: 100%
    clear: both
    
    .left, .right
      .heading
        font-family: "Open Sans Condensed"
        font-weight: 400
        font-size: 32px
        line-height: 55px
        color: #efefef
        border-bottom: 1px solid $dark-blue
        margin-bottom: 10px
        
      .recents, .description
        font-family: "Open Sans"
        font-weight: 400
        font-size: 12px
        line-height: 20px
        color: #efefef
        float: left
        
        a
          text-transform: uppercase
          text-decoration: none
          font-weight: bold
        
        img
          border: 2px solid #efefef
          margin-left: 10px
          
          &.first
            margin-left: 0px
      
      ul
        list-style: none
        font-family: "Open Sans"
        font-weight: 400
        font-size: 12px
        line-height: 20px
        color: #efefef
        float: left
        padding: 0px
        margin: 0px
        width: $one-half
        
        li
          list-style: none
          display: block
          
          a
            text-align: right
            float: right
            text-transform: uppercase
            font-weight: 600
            text-decoration: none
    
    .left
      width: $one-half
      float: left
    
    .right
      width: $one-half
      float: left
      margin-left: $gutter-size

@media only screen and (max-device-width: 480px) 
  #home  
    text-align: center
    padding: 15px 15px 0px 15px
    img 
      width: 100px
      margin: 0px 0px 20px 0px
      padding: 0px
    .headline 
      width: 260px
      margin: 0px auto 20px auto
      padding: 0px
      text-align: left
      display: block
      font-size: 20px
      font-weight: 700
      line-height: 20px
      .call-to-action
        display: block
        font-size: 8px
        line-height: 10px
        font-weight: 700
        margin-top: 10px

    #recents
      width: 1000px
      overflow: auto 
      height : 79px
      white-space: nowrap
      width: 100%
      img 

        margin-right: 10px
        border: 2px solid white
        width: 75px
        height: 75px
        display: inline-block
       
    .login
      width: 260px
      height: 180px
      padding: 10px
      margin-left: auto
      margin-right: auto
      margin-top: 10px
      background-color: #EDEDED
      -webkit-box-sizing: border-box
      h3 
        width: 100%
        height: 20px
        color: black
        font-size: 15px

      input 
        width: 200px
        height: 20px
        border-radius(3px)
        border-box()
        padding-left:5px
        box-shadow: 0px 1px 0px white, inset 0px 1px 2px rgba(0,0,0,0.3)
        border: none
        margin-bottom: 20px
      input[type='submit']
        margin-top: 0px
        z-index: 100000000



