#classify
  clearfix()
  position: relative
  display: block
  border-top: 1px solid $dark-blue
  border-bottom: 1px solid $dark-blue
  margin-top: 100px
  padding: $gutter-size 0px 0px 0px
  
  .galaxy
    width: $one-half
    margin-bottom: $gutter-size
    margin-right: $gutter-size
    float: left
    
    img
      width: 424px
      height: 424px
      float: left
  
  .tree
    float: left
    width: $one-half
    margin-top: $gutter-size
    
    .top
      h1
        display: inline
        font-family: "Open Sans Condensed"
      
      .buttons
        float: right
        
        li
          text-align: center
          line-height: 20px
          list-style: none
          min-width: $column-size + 0.5 * $gutter-size
          float: left
          background: $light-blue
          margin-left: 10px
          -webkit-border-radius: 3px
          border-radius: 3px
          
          a
            display: block
            width: 100%
            font-family: "Open Sans"
            font-size: 10px
            font-weight: 700
            color: #000000
    
    .question
      font-family: "Open Sans"
      position: absolute
      bottom: 0px
      right: 0px
      
      .heading
        text-transform: uppercase
        font-size: 12px
        font-weight: 700
        padding: 0px
        margin: 0px
      
      .text
        font-size: 15px
        padding: 0px
        margin: 0 0 40px 0
      
      .buttons
        display: table
        width: $one-half
        padding: 0px
        border-top: 1px solid $dark-blue
        border-right: 1px solid $dark-blue
        border-left: 1px solid $dark-blue
        
        .row
          display: table-row
          height: 120px
          text-align: center
          padding: 10px 0
          
          .answer
            display: table-cell
            position: relative
            height: 100px
            text-align: center
            padding: 0
            
            .icon, .icon .hover
              margin: 0 auto
              display: block
              position: relative
              text-align: center
              
              .hover
                $line-height = 18px
                position: relative
                top: -($line-height)
                width: 100px
                height: $gutter-size
                color: #AAAAAA
                font-family: 'Open Sans'
                font-weight: 600
                font-size: 11px
                line-height: $line-height
                margin: 0 auto
                padding: 0px 3px
              
              a
                display: block
                position: relative
                margin: 0 auto
                background: url('images/workflow.png') no-repeat top left
                width: 100px
                height: 100px
                
                &.workflow-bulge_dominant { background-position: 0px 0px; }
                &.workflow-bulge_none { background-position: 0px -110px; }
                &.workflow-bulge_noticeable { background-position: 0px -220px; }
                &.workflow-bulge_obvious { background-position: 0px -330px; }
                &.workflow-clump_1 { background-position: 0px -440px; }
                &.workflow-clump_2 { background-position: 0px -550px; }
                &.workflow-clump_3 { background-position: 0px -660px; }
                &.workflow-clump_4-plus { background-position: 0px -770px; }
                &.workflow-clump_4 { background-position: 0px -880px; }
                &.workflow-clump_bright-center { background-position: 0px -990px; }
                &.workflow-clump_cant-tell { background-position: 0px -1100px; }
                &.workflow-clump_chain { background-position: 0px -1210px; }
                &.workflow-clump_cluster { background-position: 0px -1320px; }
                &.workflow-clump_line { background-position: 0px -1430px; }
                &.workflow-clump_not-embedded { background-position: 0px -1540px; }
                &.workflow-clump_one-brighter { background-position: 0px -1650px; }
                &.workflow-clump_spiral { background-position: 0px -1760px; }
                &.workflow-clump_symmetrical { background-position: 0px -1870px; }
                &.workflow-disturbed { background-position: 0px -1980px; }
                &.workflow-dustlane { background-position: 0px -2090px; }
                &.workflow-edge_boxy { background-position: 0px -2200px; }
                &.workflow-edge_round { background-position: 0px -2310px; }
                &.workflow-feature { background-position: 0px -2420px; }
