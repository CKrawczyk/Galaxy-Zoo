                &.workflow-merger { background-position: 0px -2860px; }
                &.workflow-no { background-position: 0px -2970px; }
                &.workflow-other { background-position: 0px -3080px; }
                &.workflow-ring { background-position: 0px -3190px; }
                &.workflow-smooth_bar { background-position: 0px -3300px; }
                &.workflow-smooth_cigar { background-position: 0px -3410px; }
                &.workflow-smooth_in-between { background-position: 0px -3520px; }
                &.workflow-smooth_round { background-position: 0px -3630px; }
