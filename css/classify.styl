#classify
  clearfix()
  position: relative
  display: block
  border-top: 1px solid $rules
  border-bottom: 1px solid $rules
  margin-top: 100px
  padding: $gutter-size 0px 0px 0px
  
  .galaxy
    width: $one-half
    margin-bottom: $gutter-size
    margin-right: $gutter-size
    float: left
    
    img
      width: 424px
      height: 424px
      float: left
  
  .tree
    float: left
    width: $one-half
    margin-top: $gutter-size
    
    .top
      h1
        display: inline
        font-family: "Open Sans Condensed"
      
      .help
        float: right
        
        li
          font-family: "Open Sans"
          font-size: 10px
          font-weight: 700
          text-align: center
          line-height: 20px
          list-style: none
          min-width: $column-size + 0.5 * $gutter-size
          float: left
          background: $light-blue
          margin-left: 10px
          color: black
          -webkit-border-radius: 3px
          border-radius: 3px
    
    .question
      font-family: "Open Sans"
      position: absolute
      bottom: 0px
      right: 0px
      
      .heading
        text-transform: uppercase
        font-size: 12px
        font-weight: 700
        padding: 0px
        margin: 0px
      
      .text
        font-size: 15px
        padding: 0px
        margin: 0 0 40px 0
      
      .buttons
        display: table
        width: $one-half
        padding: 0px
        border-top: 1px solid $rules
        border-right: 1px solid $rules
        border-left: 1px solid $rules
        
        .row
          display: table-row
          height: 120px
          text-align: center
          padding: 10px 0
          
          .answer
            display: table-cell
            position: relative
            height: 100px
            text-align: center
            padding: 0
            
            .icon, .icon .hover
              margin: 0 auto
              display: block
              position: relative
              text-align: center
              
              .hover
                $line-height = 18px
                position: relative
                top: -($line-height)
                width: 100px
                height: $gutter-size
                color: #AAAAAA
                font-family: 'Open Sans'
                font-weight: 600
                font-size: 11px
                line-height: $line-height
                margin: 0 auto
                padding: 0px 3px
              
              a
                display: block
                position: relative
                margin: 0 auto
                background: url('images/workflow.png') no-repeat top left
                
                &.workflow-spiral_medium { background-position: -0px -0px; width: 100px; height: 100px; }
                &.workflow-spiral_1 { background-position: -100px -0px; width: 100px; height: 100px; }
                &.workflow-edge_round { background-position: -200px -0px; width: 100px; height: 100px; }
                &.workflow-clump_symmetrical { background-position: -300px -0px; width: 100px; height: 100px; }
                &.workflow-smooth_round { background-position: -400px -0px; width: 100px; height: 100px; }
                &.workflow-irregular { background-position: -500px -0px; width: 100px; height: 100px; }
                &.workflow-spiral_3 { background-position: -0px -100px; width: 100px; height: 100px; }
                &.workflow-clump_2 { background-position: -100px -100px; width: 100px; height: 100px; }
                &.workflow-other { background-position: -200px -100px; width: 100px; height: 100px; }
                &.workflow-disturbed { background-position: -300px -100px; width: 100px; height: 100px; }
                &.workflow-bulge_none { background-position: -400px -100px; width: 100px; height: 100px; }
                &.workflow-clump_one-brighter { background-position: -500px -100px; width: 100px; height: 100px; }
                &.workflow-spiral_tight { background-position: -0px -200px; width: 100px; height: 100px; }
                &.workflow-bulge_dominant { background-position: -100px -200px; width: 100px; height: 100px; }
                &.workflow-merger { background-position: -200px -200px; width: 100px; height: 100px; }
                &.workflow-clump_chain { background-position: -300px -200px; width: 100px; height: 100px; }
                &.workflow-clump_4-plus { background-position: -400px -200px; width: 100px; height: 100px; }
                &.workflow-smooth_bar { background-position: -500px -200px; width: 100px; height: 100px; }
                &.workflow-clump_1 { background-position: -0px -300px; width: 100px; height: 100px; }
                &.workflow-spiral_4 { background-position: -100px -300px; width: 100px; height: 100px; }
                &.workflow-edge_boxy { background-position: -200px -300px; width: 100px; height: 100px; }
                &.workflow-clump_spiral { background-position: -300px -300px; width: 100px; height: 100px; }
                &.workflow-clump_3 { background-position: -400px -300px; width: 100px; height: 100px; }
                &.workflow-bulge_obvious { background-position: -500px -300px; width: 100px; height: 100px; }
                &.workflow-smooth_in-between { background-position: -0px -400px; width: 100px; height: 100px; }
                &.workflow-clump_line { background-position: -100px -400px; width: 100px; height: 100px; }
                &.workflow-dustlane { background-position: -200px -400px; width: 100px; height: 100px; }
                &.workflow-clump_bright-center { background-position: -300px -400px; width: 100px; height: 100px; }
                &.workflow-bulge_noticeable { background-position: -400px -400px; width: 100px; height: 100px; }
                &.workflow-clump_not-embedded { background-position: -500px -400px; width: 100px; height: 100px; }
                &.workflow-no { background-position: -0px -500px; width: 100px; height: 100px; }
                &.workflow-star { background-position: -100px -500px; width: 100px; height: 100px; }
                &.workflow-yes { background-position: -200px -500px; width: 100px; height: 100px; }
                &.workflow-smooth_cigar { background-position: -300px -500px; width: 100px; height: 100px; }
                &.workflow-lens { background-position: -400px -500px; width: 100px; height: 100px; }
                &.workflow-spiral_4-plus { background-position: -500px -500px; width: 100px; height: 100px; }
                &.workflow-spiral_loose { background-position: -0px -600px; width: 100px; height: 100px; }
                &.workflow-spiral_bar { background-position: -100px -600px; width: 100px; height: 100px; }
                &.workflow-clump_cluster { background-position: -200px -600px; width: 100px; height: 100px; }
                &.workflow-spiral_2 { background-position: -300px -600px; width: 100px; height: 100px; }
                &.workflow-clump_4 { background-position: -400px -600px; width: 100px; height: 100px; }
                &.workflow-ring { background-position: -500px -600px; width: 100px; height: 100px; }
          
          .answer:hover
            .hover
              visibility: visible
