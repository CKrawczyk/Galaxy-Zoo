#classify
  position: relative
  display: block
  border-top: 1px solid $rules
  border-bottom: 1px solid $rules
  margin-top: 100px
  padding: $gutter-size 0px 0px 0px
  
  .galaxy
    width: $one-half
    margin-bottom: $gutter-size
    margin-right: $gutter-size
    float: left
    
    img
      width: 424px
      height: 424px
      float: left
  
  .tree
    float: left
    width: $one-half
    margin-top: $gutter-size
    
    .top
      h1
        display: inline
        font-family: "Open Sans Condensed"
      
      .help
        float: right
        
        li
          font-family: "Open Sans"
          font-size: 10px
          font-weight: 700
          text-align: center
          line-height: 20px
          list-style: none
          min-width: $column-size + 0.5 * $gutter-size
          float: left
          background: $light-blue
          margin-left: 10px
          color: black
          -webkit-border-radius: 3px
    
    .question
      font-family: "Open Sans"
      margin-top: 170px
      
      .heading
        text-transform: uppercase
        font-size: 12px
        font-weight: 700
        padding: 0px
        margin: 0px
      
      .text
        font-size: 15px
        padding: 0px
        margin: 0px
      
      .buttons
        position: absolute
        width: $one-half
        bottom: 0px
        right: 0px
        padding: 10px 0px
        border-top: 1px solid $rules
        border-right: 1px solid $rules
        border-left: 1px solid $rules
        
        .hover
          font-family: "Open Sans"
          font-size: 10px
          line-height: 18px
          padding: 0px 3px
          width: $one-sixth
          color: #efefef
          height: $gutter-size
          text-transform: uppercase
          background: $rules
          position: absolute
          left: -1px
          top: - $gutter-size
          text-align: center
