                &.workflow-spiral_4 { background-position: 0px -4180px; }
                &.workflow-spiral_bar { background-position: 0px -4290px; }
                &.workflow-spiral_cant-tell { background-position: 0px -4400px; }
                &.workflow-spiral_loose { background-position: 0px -4510px; }
