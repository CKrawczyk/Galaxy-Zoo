.stack > *
  display: none
  
  &.active
    display: block

a, [data-nav]
  cursor: pointer
  color: #0079ae
  
  &:hover
    color: #0079ae
  
  img
    border: none

body
  width: 1000px
  background: url("images/gz_headerimage.jpg") no-repeat scroll 50% 0 #000000
  color: #efefef
  margin: 0px auto 0px auto 0px
  padding: 35px 0px 0px 0px

#main
  margin-bottom: 50px


@media only screen and (max-device-width: 480px) 
  
  html, body
    width: 320px
    height: 480px
    background: #00111A
    margin:0px
    padding:0px
    -webkit-tap-highlight-color: rgba(0,0,0,0)
    -webkit-touch-callout: none;

    -webkit-overflow-scrolling: auto;
    -webkit-user-select: none; /* Disable selection/Copy of UIWebView */
    overflow: hidden
    // overflow-y: scroll
    #contentWrapper
      overflow-x: hidden
      overflow-y: scroll
      width: 100%
      height: 100%

      -webkit-overflow-scrolling: auto;
      #main
        width:100%
        height:100%
        margin-bottom: 0px



::-webkit-scrollbar
  display:none
  width: 0px !important 
  height: 0px !important 


