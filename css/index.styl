@import "grid"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,700")

// column $column-size
// gutters $gutter-size

$green =  #c1ea00
$light-blue = #0079ae
$rules = #003c57

body
  width 1000px
  background url("images/gz_headerimage.jpg") #000 no-repeat
  color #efefef
  margin 0px auto
  a
    color #0079ae
    
    &:hover
      color #0079ae

nav
  height 80px
  ul
    padding 0
    margin 0
    li
      font-family "Open Sans"
      font-weight 700
      font-size 12px
      color #efefef
      text-transform uppercase
      width $one-sixth
      line-height 76px
      vertical-align middle
      display inline-block
      float left
      text-align center
      margin-right $gutter-size

      &.last
        margin-right 0

      &.logo
        min-width $one-third
        background url("images/gz_logo.png") no-repeat
        background-position center
        height 76px

#headline
  font-family "Open Sans"
  font-weight 700
  font-size 36px
  color #efefef
  width 100%
  text-align center
  margin-top 85px
  padding 0px
  
.dek
  font-family "Open Sans"
  font-weight 300
  font-size 14px
  color #efefef
  padding 0px
  margin 0px
  
  .button
    height 20px
    width 130px
    background #c1ea00
    font-family "Open Sans"
    font-weight 800
    font-size 10px
    padding 3px 5px
    color #000000
    text-transform uppercase
    -webkit-border-radius 3px
    
#subnav
  font-family "Open Sans"
  font-weight 700
  font-size 11px
  color #efefef


#slider
  .header-blue
    font-family "Open Sans"
    font-weight 800
    font-size 12px
    color #0079ae
    text-transform: uppercase
  
  .header-title
    font-family "Open Sans"
    font-weight 700
    font-size 55px
    color #efefef
    text-transform uppercase
  
  .description
    font-family "Open Sans"
    font-weight 600
    font-size 11px
    color #efefef
    width 235px
    
  .blue-button
    height 20px
    width 95px
    background #0079ae
    font-family "Open Sans"
    font-weight 800
    font-size 10px
    color #000000
    text-transform uppercase
  